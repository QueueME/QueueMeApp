<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.queueme.StartSession">


    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/clockicon"
        android:id="@+id/imageView"
        android:layout_height="200dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Start Session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/queue"
        tools:layout_conversion_absoluteX="125dp"
        tools:layout_conversion_absoluteY="231dp"
        tools:layout_conversion_absoluteWidth="128dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/bg_screen3"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="I will be availible from now to:"
        android:visibility="visible" />


    <TextView
        android:text="o'clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_alignBaseline="@+id/time_up_to"
        android:layout_alignBottom="@+id/time_up_to"
        android:layout_toRightOf="@+id/time_up_to"
        android:layout_toEndOf="@+id/time_up_to"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <EditText
        android:id="@+id/time_up_to"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:hint="..."
        android:inputType="number"
        android:textSize="14sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/Meny"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginEnd="10dp"
        android:background="@color/bg_screen3"
        app:srcCompat="@drawable/menu"
        android:layout_alignTop="@+id/subject"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:background="@color/bg_screen3"
        app:srcCompat="@drawable/home"
        android:layout_alignTop="@+id/subject"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

</RelativeLayout>